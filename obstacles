obstacle_image = pygame.image.load("/Users/marowague/Desktop/projet_python/obstacles.jpg")


# Classe pour les obstacles
class Obstacle(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()
        self.image = pygame.transform.scale(obstacle_image, (50, 50))
        self.rect = self.image.get_rect()
        self.rect.x = random.randrange(0, largeur_fenetre - self.rect.width)
        self.rect.y = random.randrange(-100, -40)
        self.vitesse = random.randrange(1, 5)

    def update(self):
        self.rect.y += self.vitesse
        if self.rect.y > hauteur_fenetre:
            self.rect.y = random.randrange(-100, -40)
            self.rect.x = random.randrange(0, largeur_fenetre - self.rect.width)

# groupes de sprites
all_sprites = pygame.sprite.Group()
obstacles = pygame.sprite.Group()

# Génération des obstacles
for _ in range(8):
    obstacle = Obstacle()
    all_sprites.add(obstacle)
    obstacles.add(obstacle)
